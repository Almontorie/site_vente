{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <h3>Un petit marché pas trop dispendu lo !</h3>
    </div>

    <div class="container">
        <div class="card shadow">
            <div class="card-header">
                <h3 class="card-title">Recherche</h3>
            </div>
            <div class="card-body">
                <form action="{{ path('home.search') }}">
                    <div class="input-group form-group mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input class="form-control" name="keyword" type="text">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary float-right mt-2" type="submit" value="Rechecher" />
                    </div>
                </form>
                {% for message in app.flashes('Error') %}
                    <div class="alert text-center text-danger" style="background-color: rgba(1,1,1,0.5)">
                        {{ message}}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h3>Produit à vendre</h3>
        <div class="row flex">
            {% for product in products %}
                <div class="col-3">
                    <div class="card shadow mt-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="#">{{ product.title }}</a>
                            </h5>
                            <p class="card-text">{{ product.description }}</p>
                            <h3 class="text-primary">{{ product.price }} $</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}