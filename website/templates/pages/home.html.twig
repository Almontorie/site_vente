{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}

    <div class="container mt-4">
        {% for message in app.flashes('Error') %}
            <div class="alert alert-danger text-center">
                {{ message}}
            </div>
        {% endfor %}
        <div class="card shadow">
            <div class="card-header">
                <h3 class="card-title">Recherche</h3>
            </div>
            <div class="card-body">
                <form action="{{ path('home.search') }}">
                    <div class="input-group form-group mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text"></span>
                        </div>
                        <input class="form-control" name="keyword" type="text">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary float-right mt-2" type="submit" value="Rechercher" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h3>Produits Ã  vendre</h3>
        <div class="row flex">
            {% for product in products %}
                <div class="col-3">
                    <div class="card shadow mt-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('product.view', {'id': product.id}) }}">{{ product.title }}</a>
                            </h5>
                            <p class="card-text">{{ product.description }}</p>
                            <h3 class="text-primary">{{ product.price }} $</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}