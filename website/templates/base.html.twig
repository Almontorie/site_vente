<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand font-weight-bold" href="{{ path('home') }}">Amazing Fnac CDiscount </a>


            <div class="ml-auto">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="{{ path('products.add') }}" class="nav-item text-light mr-3">Ajouter un produit</a>
                <a class="text-light mr-4"  href="{{ path('user.cart.show') }}"><img style="width: 40px; height: 40px" src="https://cdn4.iconfinder.com/data/icons/shopping-21/64/shopping-02-512.png" alt="panier"></a>
                <a class="text-light mr-4" href="{{ path('fos_user_profile_show') }}">Bienvenue {{ app.user.username }}</a>
                <a class="btn btn-danger ml-auto" href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
            {% else %}
                <a class="btn btn-success" href="{{ path('fos_user_security_login') }}">Se connecter</a>
                <a class="btn btn-warning ml-2" href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
            {% endif %}
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
